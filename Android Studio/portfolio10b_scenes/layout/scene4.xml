        app:layout_constraintTop_toBottomOf="@+id/row3col1"
        app:srcCompat="@drawable/r4c1" />

    <ImageView
        android:id="@+id/row4col2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/row4col1"
        app:layout_constraintTop_toBottomOf="@+id/row3col2"
        app:srcCompat="@drawable/r4c2" />

    <ImageView
        android:id="@+id/row4col3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/row4col2"
        app:layout_constraintTop_toBottomOf="@+id/row3col3"
        app:srcCompat="@drawable/r4c3" />

