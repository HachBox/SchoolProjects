        app:srcCompat="@drawable/r5c1" />

    <ImageView
        android:id="@+id/row5col2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/row5col1"
        app:layout_constraintTop_toBottomOf="@+id/row4col2"
        app:srcCompat="@drawable/r5c2" />

    <ImageView
        android:id="@+id/row5col3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/row5col2"
        app:layout_constraintTop_toBottomOf="@+id/row4col3"
        app:srcCompat="@drawable/r5c3" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="changeScene"
        android:text="@string/start_over"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/row5col3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row5col2" />
</androidx.constraintlayout.widget.ConstraintLayout>